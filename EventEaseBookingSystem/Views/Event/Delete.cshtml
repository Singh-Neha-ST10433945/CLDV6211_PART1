@model Event

@{
    ViewData["Title"] = "Delete Event";
}

<h1 class="text-danger">Delete Event</h1>

<h4 class="text-warning">Are you sure you want to delete this event?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.EventName</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.EventDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Venue</dt>
    <dd class="col-sm-10">@Model.Venue?.VenueName</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="EventId" />

    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Delete
    </button>

    <a asp-action="Index" class="btn btn-dark ms-2">
        <i class="fas fa-arrow-left"></i> Cancel
    </a>
</form>
