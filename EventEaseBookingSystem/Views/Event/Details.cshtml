@model Event

@{
    ViewData["Title"] = "Event Details";
}

<h1 class="text-success">Event Details</h1>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.EventName</h5>
        <p class="card-text"><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
        <p class="card-text"><strong>Venue:</strong> @Model.Venue?.VenueName</p>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-warning me-2">
        <i class="fas fa-pen"></i> Edit
    </a>

    <a asp-action="Index" class="btn btn-dark">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>
