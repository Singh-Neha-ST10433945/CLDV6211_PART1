@model Event

@{
    ViewData["Title"] = "Edit Event";
}

<h2 class="text-success">Edit Event</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="EventId" />

    <div class="form-group">
        <label asp-for="EventName" class="control-label"></label>
        <input asp-for="EventName" class="form-control" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="EventDate" class="control-label"></label>
        <input asp-for="EventDate" class="form-control" type="date" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="VenueId" class="control-label"></label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn" style="background-color: #90ee90; color: black;">
            <i class="fas fa-save"></i> Save Changes
        </button>

        <a asp-action="Index" class="btn btn-dark ms-2">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </div>
</form>
