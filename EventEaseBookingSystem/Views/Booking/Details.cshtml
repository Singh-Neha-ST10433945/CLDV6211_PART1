@model Booking

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-success">Booking Details</h1>

<div>
    <h4 class="text-muted">Booking Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.Location)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.BookingId" class="btn btn-warning">
        <i class="fas fa-pen"></i> Edit
    </a>

    <a asp-action="Index" class="btn btn-dark ms-2">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>