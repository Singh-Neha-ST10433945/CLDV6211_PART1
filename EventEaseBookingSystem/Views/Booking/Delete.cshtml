@model Booking

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Delete Booking</h1>

<h3 class="text-warning">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-success">Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.Location)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />

        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete
        </button>

        <a asp-action="Index" class="btn btn-dark ms-2">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </form>
</div>