@model Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h2 class="text-danger">@ViewData["Title"]</h2>

<h4 class="text-warning">Are you sure you want to delete this venue?</h4>

<div class="mb-3">
    <strong>Venue Name:</strong> @Model.VenueName<br />
    <strong>Location:</strong> @Model.Location<br />
    <strong>Capacity:</strong> @Model.Capacity<br />
    <img src="@Model.ImageUrl" alt="Venue Image" style="width:100px;" class="mt-2" />
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-dark ms-2">
        <i class="fas fa-arrow-left"></i> Cancel
    </a>
</form>
