@model IEnumerable<Venue>

@{
    ViewData["Title"] = "Venues";
}

<h2 class="text-success">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn mb-3" style="background-color: #90ee90; color: black;">
    <i class="fas fa-plus-circle"></i> Add New Venue
</a>

<table class="table table-bordered table-striped">
    <thead class="table-success">
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VenueName</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>
                <td>
                    <img src="@item.ImageUrl" alt="Venue Image" style="width:100px;" />
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.VenueId" class="btn btn-info btn-sm me-1">
                        <i class="fas fa-file-alt"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn btn-warning btn-sm me-1">
                        <i class="fas fa-pen"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
