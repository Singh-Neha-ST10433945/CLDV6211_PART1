@model Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h2 class="text-success">@ViewData["Title"]</h2>

<div class="card mt-3 p-3">
    <p><strong>Venue Name:</strong> @Model.VenueName</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Capacity:</strong> @Model.Capacity</p>
    <p>
        <strong>Image:</strong><br />
        <img src="@Model.ImageUrl" alt="Venue Image" style="width:200px;" class="mt-2" />
    </p>
</div>

<a asp-action="Index" class="btn btn-dark mt-3">
    <i class="fas fa-arrow-left"></i> Back to List
</a>

